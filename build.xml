 <project name="Sudoku" default="compile" >

                 <target name="dir_out" >
                         <mkdir dir="build"/>
                         <mkdir dir="build/class"/>
                 </target>

                 <target name="compile"  depends="dir_out">
                         <javac destdir="build/class">
                                 <src path="Sudoku-src/"/>
                         </javac>
                 </target>
				 
				<target name="Sudoku.jar" description="make jar" depends="compile">
                         <jar destfile="build/Sudoku.jar">
                                
                         </jar>
                 </target>
					
					<target name="do"  depends="Sudoku.jar"/>
           </project>
